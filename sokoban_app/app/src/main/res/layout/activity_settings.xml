<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/levelSelectBackgroundEven"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toggleInputMethod"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/dtm_mono"
            android:gravity="center"
            android:onClick="onClickToggleControls"
            android:text="INPUT: swipe"
            android:textColor="@color/levelSelectBackgroundEven"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/donutMode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1.5"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/dtm_mono"
            android:gravity="center"
            android:onClick="onClickDonutMode"
            android:text="put 1000 more steps to unlock"
            android:textColor="@color/levelSelectBackgroundEven"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/audio"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/dtm_mono"
            android:gravity="center"
            android:onClick="onClickMute"
            android:text="AUDIO: unmuted"
            android:textColor="@color/levelSelectBackgroundEven"
            android:textSize="50dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight=".5"
            android:background="@color/colorAccent"
            android:fontFamily="@font/dtm_mono"
            android:gravity="center"
            android:onClick="onClickClearData"
            android:text="CLEAR DATA"
            android:textColor="@color/levelSelectBackgroundEven"
            android:textSize="50sp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>